        <Label Content="Gekochte producten" HorizontalAlignment="Left" Margin="303,24,0,0" VerticalAlignment="Top"/>
        <Button Content="Koop product" HorizontalAlignment="Left" Margin="44,244,0,0" VerticalAlignment="Top" Width="96" Click="BuyProduct"/>
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="145,27,0,0" VerticalAlignment="Top" Width="51" Click="RefreshStore"/>
